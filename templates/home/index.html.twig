{% extends 'base.html.twig' %}

{% block title %}carselb.com!{% endblock %}

{% block body %}
<div class="container-fluid parallax">
    <div class="row bg-dark">
        <div class="col-md-7">
            <div class="p-4 my-4 rounded shadow shadow-sm">
                <div class="col-md-8 px-0 text-white">
                    <h1 class="display-1 text-warning fw-bold">CARSELB.com</h1>
                    <hr class="my-2">
                    <h1 class="display-4 fw-bold">Easy way to find the right car</h1>
                    <hr class="my-2">
                    <p class="lead my-3">
                        Carselb is a leading digital marketplace for the automotive industry that connects car shoppers with sellers.
                    </p>
                    <hr class="my-2">
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="p-4">
                <div class=" alert alert-light shadow my-4 p-4 mx-auto">
                    <h3 class="fw-bold">
                        Find Car
                    </h3>
                    {% if app.user %}
                        <h2>
                            Welcome, {{ app.user.username }}
                        </h2>
                    {% endif %}
                    <p class="col-md-8 lead">
                        Browse over 200,000+ cars from around the country.
                    </p>
                    <div class="lead">
                        <form action="{{ path('app_car_list_results') }}" class="form-control alert alert-light my-4">
                            <div class="form-floating">
                                <input type="search" name="q" class="form-control" id="floatingInputGrid" required>
                                <label for="floatingInputGrid">E.g Chevrolet Tahoe</label>
                            </div>
                            <button type="submit" class="my-2 btn btn-lg shadow btn-warning"><i class="bi bi-search"></i> Search By </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- top deal car listing -->
    {%  include 'home/top-deal-car-listing.html.twig' %}
    <!-- top sellers listing -->
    {% include 'home/top-sellers-listing.html.twig' %}
    <!-- latest car listing -->
    {%  include 'home/latest-car-listing.html.twig' %}
    <!-- car make listing -->
    {% include 'home/car-make-listing.html.twig' %}
</div>
{% endblock %}


